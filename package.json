{
  "name": "custom-logger-service",
  "version": "0.0.1",
  "description": "Custom Logger for Apps and API's",
  "main": "lib/logger.js",
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c",
    "lint": "eslint '**/*.js'",
    "lint:fix": "prettier-eslint --list-different --write \"$(pwd)/src/**/*.js\"",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:watch": "npm run test -- --watch"
  },
  "author": {
    "name": "Isidro A. Lopez G.",
    "email": "me@ialopezg.com",
    "url": "https://ialopezg.com"
  },
  "files": [
    "lib"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "http://www.opensource.org/licenses/MIT"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ialopezg/custom-logger-service.git"
  },
  "bugs": {
    "url": "https://github.com/ialopezg/custom-logger-service/issues"
  },
  "homepage": "https://ialopezg.com/projects/custom-logger-service",
  "keywords": [
    "logger",
    "logging",
    "log",
    "console",
    "error",
    "warning",
    "info",
    "debug"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run test:staged",
      "git add ."
    ]
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.3",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^25.5.0",
    "lint-staged": "^10.2.0",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.3",
    "rollup-plugin-terser": "^5.3.0"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "ip": "^1.1.5"
  },
  "engines": {
    "node": ">=8"
  }
}
